# WildPass Backend Environment Variables
# Copy this file to .env and fill in your API keys

# =============================================================================
# SerpApi Google Flights (Flight Search)
# Sign up at: https://serpapi.com
# Free tier: 250 searches/month
# =============================================================================
SERPAPI_KEY=your_serpapi_key_here

# =============================================================================
# AeroDataBox API (Real-Time Flight Status)
# Sign up at: https://rapidapi.com/aedbx-aedbx/api/aerodatabox
# Free tier: 300 requests/month, HTTPS included
# =============================================================================
AERODATABOX_API_KEY=your_rapidapi_key_here

# =============================================================================
# Amadeus API (Legacy - optional, does NOT include Frontier F9)
# Sign up at: https://developers.amadeus.com
# =============================================================================
# AMADEUS_API_KEY=your_amadeus_key_here
# AMADEUS_API_SECRET=your_amadeus_secret_here
# AMADEUS_ENV=test

# =============================================================================
# AviationStack API (Legacy - optional, replaced by AeroDataBox)
# Sign up at: https://aviationstack.com
# Free tier: 100 requests/month, HTTP only
# =============================================================================
# AVIATIONSTACK_API_KEY=your_aviationstack_key_here

# =============================================================================
# App Configuration
# =============================================================================
DEV_MODE=false
FLASK_DEBUG=false
PORT=5001
